<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title><%= current_page.data.title %></title>
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <%= stylesheet_link_tag :all %>
    <!--[if IE 6]>
      <%= stylesheet_link_tag :ie6 %>
    <![endif]-->
  </head>
  <body>

    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">悪徳商法？マニアックス</a>
          <ul class="nav">
            <li><%= link_to "タグ一覧", "/tags.html" %></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container" id="main" role="main">
      <div class="content">
        <%= yield %>
      </div>
    </div>

    <footer class="footer">
      <div class="container">
        <div class="row">
          <div class="span8">
            <aside>
              <h2>最近の記事</h2>
              <ol>
                <% blog.articles[0...10].each do |article| %>
                  <li><%= link_to article.title, article %> <span><%= article.date.strftime('%Y年%-m月%-d日') %></span></li>
                <% end %>
              </ol>
            </aside>
          </div>
          <div class="span3 offset1">
            <p>
              <%= link_to "悪徳商法？マニアックス", "http://www6.big.or.jp/~beyond/akutoku/" %>
            </p>
          </div>
        </div>
        <div class="row" style="text-align: center">
          <hr />
          Copyright(C) 1997-2013, Beyond. All Rights Reserved.<br/>
          since 1997/09/03
        </div>
      </div>
    </footer>
  </body>
</html>
